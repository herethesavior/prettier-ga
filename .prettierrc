{
  "endOfLine": "lf",
  "useTabs": false,
  "tabWidth": 2,
  "plugins": ["prettier-plugin-apex","@prettier/plugin-xml"],
  "trailingComma": "none",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "*.{cls,apexc,trigger}",
      "options": {
        "printWidth": 100,
        "useTabs": false,
        "tabWidth": 4,
        "apexInsertFinalNewline": false
      }
    },
    {
      "files": "*.apex",
      "options": {
        "printWidth": 100,
        "useTabs": false,
        "tabWidth": 4,
        "apexInsertFinalNewline": false,
        "parser": "apex-anonymous"
      }
    },
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*-meta.xml",
      "options": {
        "semi": false,
        "tabWidth": 4,
        "useTabs": false,
        "bracketSameLine": true,
        "xmlSelfClosingSpace": false,
        "embeddedLanguageFormatting": "off",
        "xmlWhitespaceSensitivity": "strict",
        "parser": "xml"
      }
    }
  ]
}
